{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[mdx]": {
    "editor.quickSuggestions": {
      // "other": true, // or "off"
      // "comments": false, // or "off"
      // "strings": false // or "off"
    }
  },
  "terminal.integrated.suggest.builtinCompletions": {
    "pwshCode": true,
    "pwshGit": true
  },
  "editor.wordBasedSuggestions": "off",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "cSpell.enabledLanguageIds": ["markdown", "mdx"],
  "cSpell.ignorePaths": ["src/content/docs/guides/interview-questions.mdx"]
}
